<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.magnetspace.frequency" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GUI.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GUI.CreatingListActivity"
            android:label="@string/title_activity_creating_list"
            android:parentActivityName=".GUI.MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.magnetspace.frequency.GUI.MainActivity" />
        </activity>
        <activity
            android:name=".GUI.FrequencyPlayerActivity"
            android:label="@string/title_activity_frequency_player"
            android:parentActivityName=".GUI.MainActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.magnetspace.frequency.GUI.MainActivity" />
        </activity>
        <activity
            android:name=".GUI.ListInfoActivity"
            android:label="@string/title_activity_list_info"
            android:parentActivityName=".GUI.MainActivity"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.magnetspace.frequency.GUI.MainActivity" />
        </activity>
    </application>

</manifest>
