<?xml version="1.0" encoding="UTF-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="2dip" />
            <gradient
                android:startColor="#ffffffff"
                android:centerColor="#121111"
                android:centerY="0.50"
                android:endColor="#ffffffff"
                android:angle="270" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners
                    android:radius="2dip" />
                <gradient
                    android:startColor="#77f51004"
                    android:endColor="#77da1d08"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="2dip" />
                <gradient
                    android:startColor="#a7451f"
                    android:endColor="#c21e13"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>
