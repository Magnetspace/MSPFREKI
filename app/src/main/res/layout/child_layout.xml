<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iconforchild"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:src="@mipmap/medical_record"
        tools:ignore="ContentDescription,PxUsage"
        tools:src="@mipmap/medical_record"></ImageView>

    <TextView
        android:id="@+id/itemName"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toStartOf="@+id/itemDescr"
        android:layout_toLeftOf="@+id/itemDescr"
        android:layout_toRightOf="@+id/iconforchild"
        android:background="@android:color/transparent"
        android:fontFamily="monospace"
        android:textSize="25dp"
        tools:ignore="RtlHardcoded,SpUsage" />

    <CheckBox
        android:id="@+id/itemDescr"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:textSize="25sp" />

</RelativeLayout>