<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iconforparent"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:contentDescription=""
        android:scaleType="fitCenter"
        android:src="@android:color/transparent"
        tools:ignore="ContentDescription,PxUsage"></ImageView>

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iconforparent"
        android:layout_toRightOf="@+id/iconforparent"
        android:fontFamily="monospace"
        android:paddingLeft="0dip"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />


</RelativeLayout>